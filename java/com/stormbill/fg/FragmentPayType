package com.stormbill.stormbill.fg;

import android.support.v4.app.Fragment;
import android.os.Bundle;
import android.util.Log;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.AdapterView;
import android.widget.GridView;
import android.widget.ImageView;
import android.widget.TextView;

import com.stormbill.stormbill.R;
import com.stormbill.stormbill.adapter.GridViewAdapter;
import com.stormbill.stormbill.bean.GridEntity;
import com.stormbill.stormbill.common.Common;

import java.util.ArrayList;

public class FragmentPayType extends Fragment
{
	private LayoutInflater 			mInflater;
	private GridView 				mGridView;
	private ArrayList<GridEntity> 	mDatas;
	private GridViewAdapter 		mAdapter;
	private View mBaseView;

	@Override
	public View onCreateView(LayoutInflater inflater, ViewGroup container, Bundle savedInstanceState)
	{
		mInflater = inflater;
		mBaseView = inflater.inflate(R.layout.fg_jiyibi_grid_pay, container, false);
		return mBaseView;
	}

	@Override
	public void onViewCreated(View view, Bundle savedInstanceState)
	{
		super.onViewCreated(view, savedInstanceState);
		initViews(view);
		initDatas();
		initEvents();
	}

	private void initViews(View view)
	{
		mGridView = (GridView)mBaseView.findViewById(R.id.id_gridview_pay);
	}

	private void initDatas()
	{
		mDatas = new ArrayList<>();
		for(int i = 0; i < 30; i++)
		{
			GridEntity gridEntity = new GridEntity(R.drawable.circle_greed, Integer.toString(i));
			mDatas.add(gridEntity);
		}

		mAdapter = new GridViewAdapter(mInflater.getContext(), R.layout.fg_jiyibi_gridview_item, mDatas);
	}

	private void initEvents()
	{
		mGridView.setAdapter(mAdapter);
		mGridView.setOnItemClickListener(new AdapterView.OnItemClickListener()
		{
			@Override
			public void onItemClick(AdapterView<?> adapterView, View view, int i, long l)
			{
				TextView tv = (TextView)view.findViewById(R.id.gridv_text);
				String strType = (String)tv.getText();
				ImageView iv = (ImageView)view.findViewById(R.id.gridv_img);
				int nResid = (int)iv.getTag();

				Common.mTvType.setText(strType);
				Common.mImgType.setImageResource(nResid);
				Common.mImgType.setTag(nResid);
			}
		});
	}
}
