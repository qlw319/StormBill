package com.stormbill.stormbill.activity;

import android.content.Intent;
import android.os.Bundle;
import android.support.v4.app.Fragment;
import android.support.v4.app.FragmentActivity;
import android.support.v4.view.ViewPager;
import android.view.View;
import android.widget.Button;

import com.stormbill.stormbill.R;
import com.stormbill.stormbill.adapter.ViewPagerAdapter;
import com.stormbill.stormbill.fg.FragmentIncomeType;
import com.stormbill.stormbill.fg.FragmentPayType;

import java.util.ArrayList;

public class AddBillActivity extends FragmentActivity implements View.OnClickListener
{
	private Button mBtnReturn;
	private ViewPagerAdapter mViewPagerAdapter;
	private ViewPager mViewPager;
	private ArrayList<Fragment> mFragmentList;

	@Override
	protected void onCreate(Bundle savedInstanceState)
	{
		super.onCreate(savedInstanceState);
		setContentView(R.layout.fg_jiyibi_addbill);

		initView();
		initDatas();
		initEvents();
	}

	private void initView()
	{
		mBtnReturn = (Button)findViewById(R.id.id_btn_return);
		mViewPager = (ViewPager)findViewById(R.id.viewpager);
	}

	private void initDatas()
	{
		mFragmentList = new ArrayList<>();
		FragmentIncomeType fragmentIncomeType = new FragmentIncomeType();
		FragmentPayType fragmentPayType = new FragmentPayType();

		mFragmentList.add(fragmentIncomeType);
		mFragmentList.add(fragmentPayType);

		mViewPagerAdapter = new ViewPagerAdapter(getSupportFragmentManager(), mFragmentList);
	}

	private void initEvents()
	{
		mBtnReturn.setOnClickListener(this);
		mViewPager.setAdapter(mViewPagerAdapter);
		mViewPager.setCurrentItem(0);
	}

	@Override
	public void onClick(View view)
	{
		switch(view.getId())
		{
			case R.id.id_btn_return:
			{
				Intent intent = new Intent(this, MainActivity.class);
				startActivity(intent);
			}
			break;
			default:
				break;
		}
	}
}
